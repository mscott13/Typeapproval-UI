
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/Scripts/feed.js"></script>
    <script src="~/Scripts/dom-to-image.js"></script>
}

@section Styles{
    <link href="~/Content/overrides.css" rel="stylesheet" />
}


<div style="margin-left:14px !important; margin-right:14px !important;" class="ui grid">
    <div class="five wide column">
        <div class="ui icon ignored small info message">
            <i class="info icon"></i>
            <div class="content">
                <p>Recently licensed applications within <b>10 days</b> will be displayed below.</p>
            </div>
        </div>

        <div class="ui fluid raised card">
            <div class="content">
                <h4 class="ui header">Licensed Applications</h4>
            </div>
            <div id="recentDocs" class="content">
                <div class="ui relaxed divided list">
                    <div class="ui tiny active centered inline text loader docs">Getting info...</div>
                </div>
            </div>
            <div class="extra content">
                <button id="new_application" type="button" class="ui mini basic button">
                    <i class="icon sticky note"></i>
                    New
                </button>
            </div>
        </div>

        <div class="ui fluid raised card">
            <div class="content">
                <h4 class="ui header">Certificates</h4>
            </div>
            <div id="certificates" class="content">
                <div class="ui list">
                    <div class="item">
                        <i class="file archive icon"></i>
                        <div class="content">
                            <a href="/certificates">Sample Certificate</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="eleven wide column">
        <div class="ui raised aligned segment">
            <h5 class="ui header">
                <div class="content">
                    <i class="large icon clock outline"></i>
                    Recent Activity
                </div>
            </h5>
            <div class="ui divider"></div>

            <table class="ui single line table">
                <thead>
                    <tr>
                        <th>Application ID</th>
                        <th>Manufacturer</th>
                        <th>Model</th>
                        <th>Created Date</th>
                        <th>Last Update</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>8ed91c11-4fac-4802-9812-39b3ecae7a96</td>
                        <td>Dell Inc.</td>
                        <td>1000CP03S</td>
                        <td>12/11/2018 1:29 pm</td>
                        <td>12/11/2018 2:48 pm</td>
                        <td>Not submitted</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

<div style="width:150px !important;" class="ui tiny modal ginfo">
    <div id="getinfo" class="content">

    </div>
</div>

<div class="ui long modal">
    <div class="header">Application Preview</div>
    <div id="preview" class="content">

    </div>
</div>