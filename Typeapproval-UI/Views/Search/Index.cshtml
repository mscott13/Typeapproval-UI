@model ICollection<Typeapproval_UI.Models.TypeApproval>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search results</title>
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/semantic.css" rel="stylesheet" />
</head>
<body>

    <div class="ui container">
        <h4 id="search_results_title">Search Results</h4>
        @if (Model.Count > 0)
        {
            <table class="ui fixed table" id="type_approval_results_">
                <thead>
                    <tr>
                        <th>Client Company</th>
                        <th>Dealer</th>
                        <th>Model</th>
                        <th>Description</th>
                        <th>Address</th>
                        <th>Remarks</th>
                        <th>Issue Date</th>
                        <th>--</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.clientCompany</td>
                            <td>@item.Dealer</td>
                            <td>@item.Model</td>
                            <td>@item.Description</td>
                            <td>@item.Address2</td>
                            <td>@item.Remarks</td>
                            <td>@item.issueDate</td>
                            <td><a href="#">View Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="text-align:center; margin:0; padding:0; color:#6D676E;">No records found for current search criteria.</p>
        }
    </div>
</body>
</html>
