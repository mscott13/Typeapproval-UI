@model Typeapproval_UI.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset password</title>
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/semantic.css" rel="stylesheet" />
    <link href="~/Content/overrides.css" rel="stylesheet" />
</head>
<body>
    @Html.AntiForgeryToken()

    <div class="login_form_container">
        <div class="logo">
            <img src="~/Content/images/Spectrum-Management-Authority.png" draggable="false" />
        </div>
        <div class="ui tiny form">
            <div class="ui stacked segment">
                <div class="ui medium header">
                    Password Reset
                    <div class="sub header"></div>
                </div>

                <div class="login_form_controls">
                    <div class="ui tiny info message">
                        <ul class="list">
                            <li>Enter the <b>username</b> used to login to your account. Your new credentials will be sent by email. Once logged in, please ensure to change your password.</li>
                        </ul>
                    </div>
                    <div class="ui fluid left icon input">
                        <input spellcheck="false" autocomplete="off" placeholder="Username" name="reset_username" type="text">
                        <i class="grey users icon"></i>
                    </div>
                    <div class="spacing"></div>
                    <button id="btn_reset" type="button" class="fluid ui blue button">Reset</button>
                </div>
            </div>
        </div>
        <a  href="/account" style="text-align:center; display:block; font-style:italic; margin-top: 10px;" class="link_override_v3"><i class="arrow left icon"></i>back to login</a>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/semantic.js"></script>
    <script src="~/Scripts/jquery.marcopolo.min.js"></script>
    <script src="~/Scripts/site.js?t=@DateTime.Now.Millisecond"></script>
</body>
</html>
